pipeline {
    agent any

    parameters {
        string(name: 'USERNAME', defaultValue: "standard_user", description: 'user for test')
        string(name: 'PASSWORD', defaultValue: "secret_sauce", description: 'password for test')
    }

    tools {
        maven "M2"
    }

    stages {
        stage('Clone and Fetch') {
            steps {
                script {
                    // Clone and fetch steps
                    git branch: 'main', url: 'https://github.com/DanRCM/Web_Automation_Jenkins'
                }
            }
        }

        stage('Compile') {
            steps {
                script {
                    sh "mvn -B -DskipTests clean package"
                }
            }
        }

        stage('Execute Tests') {
            steps {
                script {
                    // Run the test suite
                    sh "mvn test -DUSERNAME=${USERNAME} -DPASSWORD=${PASSWORD}"
                }
            }
            post {
                always{
                    allure([
                    includeProperties: false,
                    jdk: '',
                    properties: [],
                    reportBuildPolicy: 'ALWAYS',
                    results: [[path: '*/allure-results']]
                    ])
                }
            }
        }
    }
}